mixin catalogItem(imgNum, title, txt)
	+e.col--js.col-lg-4
		+e.A.item(href="#")
			+pic(`catalog-item-${imgNum}.jpg`)(class="sCatalog__item-img")
			+e.item-descr
				+e.item-title=title
				+e.item-txt=txt

mixin smallCatalogItem(title)
	+e.col--js.col-lg-4
		+e.A.item(href="#")
			+e.item-descr--small
				+e.item-title=title

mixin smallCatalogItem03(title)
