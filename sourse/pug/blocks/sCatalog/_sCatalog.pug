mixin sCatalog()
	// start sCatalog
	+b.SECTION.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Каталог букетов
				p Какие цветы выбираем сегодня?
			+e.row.row
				+catalogItem(1, 'Мужские букеты', 'Он будет сражен наповал')
				+catalogItem(2, 'Женские букеты', 'Порадуйте любимых')
				+catalogItem(3, 'Компаниям', 'Ваши пожелания - наш закон')
				+catalogItem(3, 'В корзинах и ящиках', 'Ваши пожелания - наш закон')
				+catalogItem(3, 'Сухоцветы', 'Ваши пожелания - наш закон')
				+catalogItem(3, '1 сентября', 'Ваши пожелания - наш закон')
			//+e.row.row
				+smallCatalogItem('Авторские букеты')
				+smallCatalogItem('Букеты на день рождения')
				+smallCatalogItem('Букеты в корзинах')
	// end sCatalog

