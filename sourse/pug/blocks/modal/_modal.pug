mixin modal()
	//  start modals

	+b.modal-win(id="modal-call" class=" " style="display: none" )
		+form-wrap
			.text-center
				+e.title.form-data.h3.ttu Обратный звонок
				p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут
			+input("Ваше Имя")(required)  
			+e.BUTTON.btn.btn(type="submit"  ) 
			+polite()
	// #modal-call
	
	// end modals
mixin callBackWindow()
	+b.callback-win--js
		+form-wrap
			+e.title Оставьте свой номер и мы сразу же перезвоним
			+input('Ваш номер', 'tel')
			+e.BUTTON.btn(type="submit") Позвонить мне
			+e.our-tell
				p Наш номер телефона
				a(href="tel:+79250437903") +7 925 043 79 03
